{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "scalex": {
	  "description":"scale factor to get cm x axis",
      "type": "string"
    },
    "scaley": {
	  "description":"scale factor to get cm y axis",
      "type": "string"
    },
    "offsetx": {
	  "description":"how much should cols (not the header) be translated left",
      "type": "string"
    },
    "lwidth": {
	  "description":"page width 27.517 for A4 cm",
      "type": "string"
    },
    "lheight": {
	  "description":"page height 19.05 for A4 cm",
      "type": "string"
    },
    "title": {
	  "description":"Top Players (>={{ratio_thresold}}%MS) ranking for Automation Markets {{size}} $Bn",
      "type": "string"
    },
    "size": {
	  "description":"total market size",
      "type": "number"
    },
    "currency": {
	  "description":"currency of the figures",
      "type": "string"
    },
    "display": {
	  "description":"unit (multiple of currency) to display Bn, Mn, Kn, Un",
      "type": "string"
    },
    "internal": {
	  "description":"unit (multiple of currency) of internal data Bn, Mn, Kn, Un",
      "type": "string"
    },
    "ratio_threshold": {
	  "description":"market share above which we show competitors",
      "type": "integer"
    },
    "displayTitleRows": {
	  "description":"string to use to display product in rows header n=as many as product lines",
      "type": "object",
      "properties": {
        "Product_1": {
          "type": "string"
        },
        "Product_2": {
          "type": "string"
        },
        "Product_n": {
          "type": "string"
        }
      }
    },
    "shortTitleRows": {
      "description":"short (3chars) string to use to display product in rows header",	  
      "type": "object",
      "properties": {
        "Product_1": {
          "type": "string"
        },
        "Product_2": {
          "type": "string"
        },
        "Product_n": {
          "type": "string"
        },
      },
    },
    "Colors": {
	  "description":"color to fill the competitor market share box",
      "type": "object",
      "properties": {
        "Competitor_1": {
          "type": "string"
        },
        "Competitor_2": {
          "type": "string"
        },
        "Competitor_n": {
          "type": "string"
        },
        "Other": {
          "type": "string"
        }
      }
    },
    "shortTitleCols": {
	  "description":"short string to display competitors name",
      "type": "object",
      "properties": {
        "Competitor_1": {
          "type": "string"
        },
        "Competitor_2": {
          "type": "string"
        },
        "Other": {
          "type": "string"
        }
      }
    },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
		    "description":"product line name (internal) to be substituted with display version",
            "type": "string"
          },
          "size": {
		    "description":"Market size of this product line",
            "type": "number"
          },
          "box": {
		    "description":"rectangle location and dimenssion to represent the market size for this product line"
            "type": "object",
            "properties": {
              "Top": {
                "type": "number"
              },
              "Left": {
                "type": "number"
              },
              "Width": {
                "type": "number"
              },
              "Height": {
                "type": "number"
              }
            },
            "required": [
              "Top",
              "Left",
              "Width",
              "Height"
            ]
          },
          "cols": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {			  
                "title": {
				  "description":"name of the competitor"
                  "type": "string"
                },
                "size": {
				  "description":"size of the competitor in this market"
                  "type": "number"
                },
                "box": {
				  "description":"rectangle location and dimenssion to represent the market share for this product line"
                  "type": "object",
                  "properties": {
                    "Top": {
                      "type": "number"
                    },
                    "Left": {
                      "type": "number"
                    },
                    "Width": {
                      "type": "number"
                    },
                    "Height": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "Top",
                    "Left",
                    "Width",
                    "Height"
                  ]
                }
              },
              "required": [
                "title",
                "size",
                "box"
              ]
            }
          }
        },
        "required": [
          "title",
          "size",
          "box",
          "cols"
        ]
      }
    }
  },
  "required": [
    "scalex",
    "scaley",
    "offsetx",
    "lwidth",
    "lheight",
    "title",
    "size",
    "currency",
    "display",
    "internal",
    "ratio_threshold",
    "displayTitleRows",
    "shortTitleRows",
    "Colors",
    "shortTitleCols",
    "rows"
  ]
}